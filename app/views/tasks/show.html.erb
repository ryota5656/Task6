<body>
  
<%= render "shared/partial" %>

<div class="main">
<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @task.title%></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @task.start%></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @task.created_at%></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @task.checkbox%></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @task.memo%></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to"スケジュール一覧に戻る",:tasks%></li>
    <li><%= link_to"スケジュールを編集",:edit_task%></li>
    <li><%= link_to "スケジュールを削除", @task, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
  </ul>
</div>

</div>

  <footer>
    <p>
    <script language="JavaScript">
        mydate=new Date();
        Ye=mydate.getFullYear()+"年";
        Mo=mydate.getMonth()+1+"月";
        Da=mydate.getDate()+"日";
        Day=mydate.getDay();
        document.write("<span style='color:#fff;'>");
        document.write("現在の日時 : "+Ye+Mo+Da);
    </script>
</footer>
</body>